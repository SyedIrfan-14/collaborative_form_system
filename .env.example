# App port (Railway sets this automatically, but good for local dev)
PORT=3000

# MySQL connection (Railway provides MYSQL_URL automatically if you use their MySQL plugin)
MYSQL_URL=

# Alternatively, use these for local development or other hosts:
DB_HOST=your_mysql_host
DB_USER=your_mysql_user
DB_PASS=your_mysql_password
DB_NAME=your_mysql_db_name
DB_PORT=3306

# JWT secret for authentication (use a strong, random value in production)
JWT_SECRET=your_jwt_secret
